<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field name="search" type="text" hint="COM_TIMELOG_SEARCH_FILTER_SUBMIT"
               label="COM_USERS_FILTER_SEARCH_DESC"
               class="js-stools-search-string" />

        <field name="state"
               type="status"
               label="COM_TIMELOG_FILTER_STATE"
               description="COM_TIMELOG_FILTER_STATE_DESC"
               onchange="this.form.submit();"
        >
            <option value="">JOPTION_SELECT_PUBLISHED</option>
        </field>

	<field name="client_id"
		   type="activity"
		   addfieldpath="/components/com_timelog/models/fields"
		   label=""
		   onchange="this.form.submit();"
	>
	</field>

</fields>

<fields name="list">

	<field name="limit"
		   type="limitbox"
		   class="input-mini"
		   default="25"
		   onchange="this.form.submit();"
	/>

</fields>

</form>
